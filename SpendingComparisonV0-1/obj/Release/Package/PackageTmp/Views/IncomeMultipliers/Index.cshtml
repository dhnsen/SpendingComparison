@model IEnumerable<SpendingComparisonV0_1.Models.Multipliers.IncomeMultiplier>

@{
    ViewBag.Title = "Spending Comparison";
}

<h2>Manage Income Multipliers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IncomeRange.IncomeRangeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantsAndDining)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Groceries)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentOrMortgage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElectricAndGas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IncomeRange.ToString)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantsAndDining)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Groceries)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentOrMortgage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ElectricAndGas)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MultiplierIncomeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MultiplierIncomeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MultiplierIncomeID })
        </td>
    </tr>
