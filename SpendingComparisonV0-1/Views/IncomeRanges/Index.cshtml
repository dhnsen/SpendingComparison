@model IEnumerable<SpendingComparisonV0_1.Models.StatisticalSupport.IncomeRange>

@{
    ViewBag.Title = "Spending Comparison";
}

<h2>Manage Income Ranges</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BottomIncomeRange)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopIncomeRange)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BottomIncomeRange)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TopIncomeRange)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IncomeRangeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.IncomeRangeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IncomeRangeID })
        </td>
    </tr>
}

</table>
